<Window x:Class="Center.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        xmlns:views="clr-namespace:Center.Views"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Конвертер для видимости -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Стиль для кнопок меню -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Боковое меню -->
            <ColumnDefinition Width="220"/>
            <!-- Основная область -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Боковое меню -->
        <Border Grid.Column="0" Background="#1a237e">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Заголовок -->
                    <RowDefinition Height="*"/>
                    <!-- Меню -->
                    <RowDefinition Height="Auto"/>
                    <!-- Пользователь -->
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <Border Grid.Row="0" Padding="20,15" Background="#0d1545">
                    <TextBlock Text="🎯 Развлекательный центр" 
                               Foreground="White" 
                               FontSize="12" 
                               FontWeight="Bold"/>
                </Border>

                <!-- Пункты меню -->
                <StackPanel Grid.Row="1" Margin="10,20,10,0">
                    <Button Content="📋 Каталог услуг" 
                            Style="{StaticResource MenuButtonStyle}"
                            Command="{Binding NavigateToCatalogCommand}"/>

                    <Button Content="📅 Бронирование" 
                            Style="{StaticResource MenuButtonStyle}"
                            Command="{Binding NavigateToBookingCommand}"/>

                    <Button Content="📊 Мои заказы" 
                            Style="{StaticResource MenuButtonStyle}"
                            Command="{Binding NavigateToOrdersCommand}"/>

                    <!-- Разделитель -->
                    <Border Margin="0,20,0,10" Height="1" Background="#3949ab"/>

                    <!-- Админские пункты -->
                    <StackPanel x:Name="AdminMenuPanel">
                        <TextBlock Text="Администрирование" 
                                   Foreground="#bbdefb" 
                                   FontSize="12" 
                                   Margin="15,5"/>

                        <Button Content="⚙️ Управление услугами" 
                                Style="{StaticResource MenuButtonStyle}"
                                Command="{Binding NavigateToAdminServicesCommand}"/>

                        <Button Content="👥 Пользователи" 
                                Style="{StaticResource MenuButtonStyle}"
                                Command="{Binding NavigateToAdminUsersCommand}"/>

                        <Button Content="📈 Отчеты" 
                                Style="{StaticResource MenuButtonStyle}"
                                Command="{Binding NavigateToReportsCommand}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Информация о пользователе - В САМОМ НИЗУ -->
                <Border Grid.Row="2" 
                        Margin="10" 
                        Padding="15" 
                        Background="#3949ab" 
                        CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="{Binding CurrentUser.Name}" 
                                   Foreground="White" 
                                   FontWeight="Bold"/>
                        <TextBlock Text="{Binding CurrentUser.Role}" 
                                   Foreground="#bbdefb" 
                                   FontSize="12"/>
                        <Button Content="Выйти" 
                                Margin="0,10,0,0" 
                                Padding="5"
                                Background="Transparent"
                                Foreground="White"
                                BorderBrush="#bbdefb"
                                Command="{Binding LogoutCommand}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Основная область -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Шапка -->
            <Border Grid.Row="0" Background="#f5f5f5" Padding="15,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Заголовок -->
                    <TextBlock Grid.Column="0" 
                               Text="{Binding CurrentPageTitle}"
                               FontSize="18" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>

                    <!-- Кнопки -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="🛒 Бронировать" 
                                Margin="0,0,10,0"
                                Padding="10,5"
                                Background="#1a237e"
                                Foreground="White"
                                Command="{Binding QuickBookingCommand}"/>

                        <Button Content="👤 Профиль" 
                                Padding="10,5"
                                BorderBrush="#1a237e"
                                Foreground="#1a237e"
                                Command="{Binding ShowProfileCommand}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Область для контента -->
            <ContentControl Grid.Row="1" Content="{Binding CurrentPage}" />
        </Grid>
    </Grid>
</Window>
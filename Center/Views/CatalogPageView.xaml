<UserControl x:Class="Center.Views.CatalogPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900"
             FontFamily="Segoe UI">

    <UserControl.Resources>
        <!-- Стиль для карточек услуг -->
        <Style x:Key="ServiceCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <!-- Стиль для кнопки бронирования -->
        <Style x:Key="BookButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4299E1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Стиль для тэгов категорий -->
        <Style x:Key="CategoryTagStyle" TargetType="Border">
            <Setter Property="Background" Value="#EDF2F7"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Margin" Value="0,0,5,5"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="15" Background="#F7FAFC">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Панель фильтров -->
            <RowDefinition Height="*"/>
            <!-- Список услуг -->
        </Grid.RowDefinitions>

        <!-- Панель поиска и фильтрации -->
        <Border Grid.Row="0" 
                Background="White" 
                CornerRadius="8" 
                Padding="15"
                BorderBrush="#E2E8F0"
                BorderThickness="1"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Строка поиска -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Width="300" 
                             Height="40"
                             Padding="12"
                             FontSize="14"
                             BorderBrush="#CBD5E0"
                             BorderThickness="1"
                             VerticalContentAlignment="Center"/>
                    <Button Content="Поиск" 
                            Width="100" 
                            Height="40"
                            Margin="10,0,0,0"
                            Style="{StaticResource BookButtonStyle}"
                            Command="{Binding SearchCommand}"/>
                </StackPanel>

                <!-- Выпадающий список категорий -->
                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding AllCategories}"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id"
                          SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                          Width="200"
                          Height="40"
                          Padding="10"
                          FontSize="14"
                          BorderBrush="#CBD5E0"
                          BorderThickness="1"
                          Background="#F7FAFC"
                          Foreground="#4A5568"
                          HorizontalAlignment="Right"/>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <Grid Grid.Row="1">
            <!-- Список услуг -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding DisplayedServices}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- Карточка услуги -->
                            <Border Style="{StaticResource ServiceCardStyle}">
                                <Grid Margin="20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Иконка -->
                                    <Border Grid.Column="0" 
                                            Width="80" 
                                            Height="80" 
                                            Background="#4299E1" 
                                            CornerRadius="8"
                                            Margin="0,0,20,0">
                                        <TextBlock Text="🎯" 
                                                   FontSize="30"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Информация -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Name}" 
                                                   FontSize="18" 
                                                   FontWeight="SemiBold"
                                                   Foreground="#2D3748"
                                                   Margin="0,0,0,10"/>

                                        <!-- Категории -->
                                        <WrapPanel Margin="0,0,0,15">
                                            <ItemsControl ItemsSource="{Binding Categories}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <WrapPanel Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Style="{StaticResource CategoryTagStyle}">
                                                            <TextBlock Text="{Binding Name}" 
                                                                       Foreground="#4A5568"
                                                                       FontSize="11"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </WrapPanel>

                                        <!-- Цены и длительность -->
                                        <StackPanel Orientation="Horizontal">
                                            <StackPanel Margin="0,0,30,0">
                                                <TextBlock Text="Будни" 
                                                           FontSize="12"
                                                           Foreground="#718096"/>
                                                <TextBlock Text="{Binding WeekdayPrice, StringFormat={}{0:N0} ₽}"
                                                           FontSize="18"
                                                           FontWeight="SemiBold"
                                                           Foreground="#2D3748"/>
                                            </StackPanel>

                                            <StackPanel Margin="0,0,30,0">
                                                <TextBlock Text="Выходные" 
                                                           FontSize="12"
                                                           Foreground="#718096"/>
                                                <TextBlock Text="{Binding WeekendPrice, StringFormat={}{0:N0} ₽}"
                                                           FontSize="18"
                                                           FontWeight="SemiBold"
                                                           Foreground="#2D3748"/>
                                            </StackPanel>

                                            <StackPanel>
                                                <TextBlock Text="Длительность" 
                                                           FontSize="12"
                                                           Foreground="#718096"/>
                                                <TextBlock Text="{Binding Duration, StringFormat={}{0} мин.}"
                                                           FontSize="18"
                                                           FontWeight="SemiBold"
                                                           Foreground="#2D3748"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Кнопка бронирования -->
                                    <Button Grid.Column="2" 
                                            Content="Забронировать"
                                            Style="{StaticResource BookButtonStyle}"
                                            Width="150"
                                            Height="40"
                                            FontSize="14"
                                            VerticalAlignment="Center"
                                            Command="{Binding DataContext.BookServiceCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Индикатор загрузки (триггер на IsLoading) -->
            <Border Background="#CCFFFFFF">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="20" Margin="0,0,0,10"/>
                    <TextBlock Text="Загрузка услуг..." 
                               HorizontalAlignment="Center"
                               FontSize="14"
                               Foreground="#4A5568"/>
                </StackPanel>
            </Border>

            <!-- Сообщение "Нет услуг" (триггер на количество) -->
            <Border Background="White" 
                    CornerRadius="8"
                    BorderBrush="#E2E8F0"
                    BorderThickness="1"
                    Padding="40">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding DisplayedServices.Count}" Value="0">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="🎯" 
                               FontSize="48"
                               Foreground="#CBD5E0"
                               Margin="0,0,0,20"/>
                    <TextBlock Text="Услуги не найдены" 
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#4A5568"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Попробуйте изменить параметры поиска"
                               FontSize="14"
                               Foreground="#718096"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
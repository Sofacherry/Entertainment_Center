<UserControl x:Class="Center.Views.CurrentOrdersPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Center.Views"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             FontFamily="Segoe UI">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Стиль для карточек заказов -->
        <Style x:Key="OrderCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <!-- Стиль для кнопок действий -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Конкретные стили для разных типов кнопок -->
        <Style x:Key="DetailsButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#2C4A6B"/>
            <Setter Property="Foreground" Value="#2C4A6B"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EFF6FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CancelButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FCA5A5"/>
            <Setter Property="Foreground" Value="#DC2626"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FEF2F2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RemindButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FCD34D"/>
            <Setter Property="Foreground" Value="#D97706"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFFBEB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F3F4F6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Пастельные цвета для статусов (используем SolidColorBrush вместо Color) -->
        <SolidColorBrush x:Key="StatusCreatedColor" Color="#FFF3F4F6"/>
        <SolidColorBrush x:Key="StatusCreatedBorderColor" Color="#FFD1D5DB"/>
        <SolidColorBrush x:Key="StatusPendingColor" Color="#FFECFDF5"/>
        <SolidColorBrush x:Key="StatusPendingBorderColor" Color="#FFA7F3D0"/>
        <SolidColorBrush x:Key="StatusActiveColor" Color="#FFF0F9FF"/>
        <SolidColorBrush x:Key="StatusActiveBorderColor" Color="#FFBAE6FD"/>
        <SolidColorBrush x:Key="StatusCompletedColor" Color="#FFF7FEE7"/>
        <SolidColorBrush x:Key="StatusCompletedBorderColor" Color="#FFBBF7D0"/>
        <SolidColorBrush x:Key="StatusCancelledColor" Color="#FFFEF2F2"/>
        <SolidColorBrush x:Key="StatusCancelledBorderColor" Color="#FFFECACA"/>

        <!-- Текст статусов -->
        <SolidColorBrush x:Key="StatusCreatedTextColor" Color="#6B7280"/>
        <SolidColorBrush x:Key="StatusPendingTextColor" Color="#059669"/>
        <SolidColorBrush x:Key="StatusActiveTextColor" Color="#0284C7"/>
        <SolidColorBrush x:Key="StatusCompletedTextColor" Color="#65A30D"/>
        <SolidColorBrush x:Key="StatusCancelledTextColor" Color="#DC2626"/>
    </UserControl.Resources>

    <Grid Margin="15" Background="#F8F8F8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Панель фильтров -->
            <RowDefinition Height="*"/>
            <!-- Список заказов -->
        </Grid.RowDefinitions>

        <!-- Панель фильтров (стилизована как в каталоге) -->
        <Border Grid.Row="0" 
                Background="White" 
                CornerRadius="8" 
                Padding="15"
                BorderBrush="#E5E7EB"
                BorderThickness="1"
                Margin="0,0,0,15">
            <WrapPanel Orientation="Horizontal">
                <RadioButton Content="Все заказы" 
                           IsChecked="{Binding ShowAllOrders}"
                           GroupName="OrderFilter"
                           Margin="0,0,15,0"
                           Style="{StaticResource {x:Type RadioButton}}">
                    <RadioButton.Resources>
                        <Style TargetType="RadioButton" BasedOn="{StaticResource {x:Type RadioButton}}">
                            <Setter Property="Padding" Value="10,6"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="#D1D5DB"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="RadioButton">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6"
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#EFF6FF"/>
                                                <Setter TargetName="border" Property="BorderBrush" Value="#2C4A6B"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#F3F4F6"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </RadioButton.Resources>
                </RadioButton>

                <RadioButton Content="Текущие" 
                           IsChecked="{Binding ShowCurrentOrders}"
                           GroupName="OrderFilter"
                           Margin="0,0,15,0"/>
                <RadioButton Content="Завершенные" 
                           IsChecked="{Binding ShowCompletedOrders}"
                           GroupName="OrderFilter"
                           Margin="0,0,15,0"/>
                <RadioButton Content="Отмененные" 
                           IsChecked="{Binding ShowCancelledOrders}"
                           GroupName="OrderFilter"/>
            </WrapPanel>
        </Border>

        <!-- Основной контент -->
        <Grid Grid.Row="1">
            <!-- Список заказов -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Orders}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- Карточка заказа -->
                            <Border Style="{StaticResource OrderCardStyle}">
                                <Grid Margin="20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Иконка услуги -->
                                    <Border Grid.Column="0" 
                                            Width="80" 
                                            Height="80" 
                                            Background="#EFF6FF" 
                                            CornerRadius="8"
                                            Margin="0,0,20,0">
                                        <TextBlock Text="{Binding ServiceIcon}" 
                                                   FontSize="30"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Foreground="#2C4A6B"/>
                                    </Border>

                                    <!-- Информация о заказе -->
                                    <StackPanel Grid.Column="1">
                                        <!-- Заголовок с названием услуги -->
                                        <TextBlock Text="{Binding ServiceName}" 
                                               FontSize="18" 
                                               FontWeight="SemiBold"
                                               Foreground="#2D3748"
                                               Margin="0,0,0,10"/>

                                        <!-- Детали заказа -->
                                        <WrapPanel Margin="0,0,0,15">
                                            <!-- Дата и время -->
                                            <Border Background="#EFF6FF" 
                                                    BorderBrush="#DBEAFE"
                                                    BorderThickness="1"
                                                    CornerRadius="6"
                                                    Padding="8,4"
                                                    Margin="0,0,5,5">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="📅" 
                                                       Foreground="#2D3748"
                                                       Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding OrderDate, StringFormat='dd.MM.yyyy HH:mm'}" 
                                                       FontSize="12"
                                                       Foreground="#2D3748"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Количество людей -->
                                            <Border Background="#EFF6FF" 
                                                BorderBrush="#DBEAFE"
                                                BorderThickness="1"
                                                CornerRadius="6"
                                                Padding="8,4"
                                                Margin="0,0,5,5">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="👥" 
                                                       Foreground="#2D3748"
                                                       Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding PeopleCount, StringFormat='{}{0} чел.'}" 
                                                       FontSize="12"
                                                       Foreground="#2D3748"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Цена -->
                                            <Border Background="#EFF6FF" 
                                                BorderBrush="#DBEAFE"
                                                BorderThickness="1"
                                                CornerRadius="6"
                                                Padding="8,4"
                                                Margin="0,0,5,5">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="💰" 
                                                       Foreground="#2D3748"
                                                       Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding TotalPrice, StringFormat='{}{0:N2} ₽'}" 
                                                       FontSize="12"
                                                       Foreground="#2D3748"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Ресурсы (если есть) -->
                                            <Border Background="#EFF6FF" 
                                                    BorderBrush="#DBEAFE"
                                                    BorderThickness="1"
                                                    CornerRadius="6"
                                                    Padding="8,4"
                                                    Margin="0,0,5,5"
                                                    Visibility="{Binding HasResources, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="🔧" 
                                                           Foreground="#2D3748"
                                                           Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding ResourcesSummary}" 
                                                       FontSize="12"
                                                       Foreground="#2D3748"
                                                       TextTrimming="CharacterEllipsis"
                                                       MaxWidth="200"/>
                                                </StackPanel>
                                            </Border>
                                        </WrapPanel>

                                        <!-- Статус и таймер -->
                                        <StackPanel Orientation="Horizontal">
                                            <!-- Статус заказа -->
                                            <Border x:Name="StatusBorder"
                                                    CornerRadius="6"
                                                    Padding="10,6"
                                                    Margin="0,0,15,0">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="{StaticResource StatusCreatedColor}"/>
                                                        <Setter Property="BorderBrush" Value="{StaticResource StatusCreatedBorderColor}"/>
                                                        <Setter Property="BorderThickness" Value="1"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="создан">
                                                                <Setter Property="Background" Value="{StaticResource StatusCreatedColor}"/>
                                                                <Setter Property="BorderBrush" Value="{StaticResource StatusCreatedBorderColor}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="ожидает оплаты">
                                                                <Setter Property="Background" Value="{StaticResource StatusPendingColor}"/>
                                                                <Setter Property="BorderBrush" Value="{StaticResource StatusPendingBorderColor}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="активный">
                                                                <Setter Property="Background" Value="{StaticResource StatusActiveColor}"/>
                                                                <Setter Property="BorderBrush" Value="{StaticResource StatusActiveBorderColor}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="завершен">
                                                                <Setter Property="Background" Value="{StaticResource StatusCompletedColor}"/>
                                                                <Setter Property="BorderBrush" Value="{StaticResource StatusCompletedBorderColor}"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="отменен">
                                                                <Setter Property="Background" Value="{StaticResource StatusCancelledColor}"/>
                                                                <Setter Property="BorderBrush" Value="{StaticResource StatusCancelledBorderColor}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock x:Name="StatusText"
                                                           FontSize="13"
                                                           FontWeight="Medium">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="{StaticResource StatusCreatedTextColor}"/>
                                                            <Setter Property="Text" Value="{Binding Status}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="создан">
                                                                    <Setter Property="Foreground" Value="{StaticResource StatusCreatedTextColor}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="ожидает оплаты">
                                                                    <Setter Property="Foreground" Value="{StaticResource StatusPendingTextColor}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="активный">
                                                                    <Setter Property="Foreground" Value="{StaticResource StatusActiveTextColor}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="завершен">
                                                                    <Setter Property="Foreground" Value="{StaticResource StatusCompletedTextColor}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="отменен">
                                                                    <Setter Property="Foreground" Value="{StaticResource StatusCancelledTextColor}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>

                                            <!-- Таймер до начала (для текущих заказов) -->
                                            <TextBlock Text="{Binding TimeUntilStart}" 
                                                       Foreground="#DC2626"
                                                       FontSize="13"
                                                       FontWeight="Medium"
                                                       VerticalAlignment="Center"
                                                       Visibility="{Binding ShowTimer, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Кнопки действий -->
                                    <StackPanel Grid.Column="2" 
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Center">
                                        <!-- Кнопка подробнее -->
                                        <Button Content="Подробнее" 
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=DataContext.ViewDetailsCommand}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource DetailsButtonStyle}"
                                                Margin="0,0,0,10"/>

                                        <!-- Кнопка отменить (только для созданных и ожидающих оплаты) -->
                                        <Button Content="Отменить" 
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=DataContext.CancelOrderCommand}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource CancelButtonStyle}"
                                                Margin="0,0,0,10"
                                                Visibility="{Binding CanCancel, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                        <!-- Кнопка напоминание (только для текущих) -->
                                        <Button Content="Напомнить" 
                                                Command="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=DataContext.SetReminderCommand}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource RemindButtonStyle}"
                                                Margin="0,0,0,10"
                                                Visibility="{Binding CanSetReminder, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                        <!-- Кнопка удалить (только для завершенных и отмененных) -->
                                        <Button Command="{Binding RelativeSource={RelativeSource AncestorType=ItemsControl}, Path=DataContext.DeleteOrderCommand}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource DeleteButtonStyle}"
                                                Visibility="{Binding CanDelete, Converter={StaticResource BoolToVisibilityConverter}}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="🗑️" Margin="0,0,5,0"/>
                                                <TextBlock Text="Удалить"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Сообщение "Нет заказов" -->
            <Border Background="White" 
                    CornerRadius="8"
                    BorderBrush="#E2E8F0"
                    BorderThickness="1"
                    Padding="40">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Orders.Count}" Value="0">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="📭" 
                               FontSize="48"
                               Foreground="#CBD5E0"
                               Margin="0,0,0,20"/>
                    <TextBlock Text="У вас пока нет заказов" 
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="#4A5568"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Перейдите в каталог, чтобы сделать первое бронирование"
                               FontSize="14"
                               Foreground="#718096"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>
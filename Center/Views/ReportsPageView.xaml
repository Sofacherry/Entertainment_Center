<UserControl x:Class="Center.Views.ReportsPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000"
             FontFamily="Segoe UI">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="MetricCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20"/>
        </Style>

        <Style x:Key="MetricValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#111827"/>
        </Style>

        <Style x:Key="MetricLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>

        <Style x:Key="TabButtonBaseStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TabButtonNormalStyle" BasedOn="{StaticResource TabButtonBaseStyle}" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#6B7280"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F8F8F8">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                
                <!-- Панель вкладок -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="15"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        Margin="0,0,0,20">
                    <WrapPanel>
                        <Button Content="📈 Дашборд" 
                                Command="{Binding SelectTabCommand}"
                                CommandParameter="dashboard">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource TabButtonNormalStyle}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsDashboardTab}" Value="True">
                                            <Setter Property="Background" Value="#EFF6FF"/>
                                            <Setter Property="BorderBrush" Value="#2C4A6B"/>
                                            <Setter Property="BorderThickness" Value="2"/>
                                            <Setter Property="Foreground" Value="#2C4A6B"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <Button Content="💰 Выручка" 
                                Command="{Binding SelectTabCommand}"
                                CommandParameter="revenue">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource TabButtonNormalStyle}">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsRevenueTab}" Value="True">
                                            <Setter Property="Background" Value="#EFF6FF"/>
                                            <Setter Property="BorderBrush" Value="#2C4A6B"/>
                                            <Setter Property="BorderThickness" Value="2"/>
                                            <Setter Property="Foreground" Value="#2C4A6B"/>
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </WrapPanel>
                </Border>

                <!-- Дашборд -->
                <Border Background="White" 
                        CornerRadius="8"
                        Padding="20"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        Margin="0,0,0,20"
                        Visibility="{Binding IsDashboardVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Text="📈 Общая статистика" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       Foreground="#111827"/>
                            <Button Content="Обновить" 
                                    Margin="20,0,0,0"
                                    Padding="10,5"
                                    Command="{Binding LoadDashboardCommand}"
                                    Background="#2C4A6B"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontWeight="SemiBold"
                                    Cursor="Hand"/>
                        </StackPanel>

                        <WrapPanel>
                            <Border Style="{StaticResource MetricCardStyle}" Width="280">
                                <StackPanel>
                                    <TextBlock Text="{Binding TotalRevenueFormatted}" 
                                               Style="{StaticResource MetricValueStyle}"/>
                                    <TextBlock Text="Общая выручка" 
                                               Style="{StaticResource MetricLabelStyle}"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource MetricCardStyle}" Width="280">
                                <StackPanel>
                                    <TextBlock Text="{Binding DashboardMetrics.TotalOrders}" 
                                               Style="{StaticResource MetricValueStyle}"/>
                                    <TextBlock Text="Всего заказов" 
                                               Style="{StaticResource MetricLabelStyle}"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource MetricCardStyle}" Width="280">
                                <StackPanel>
                                    <TextBlock Text="{Binding DashboardMetrics.TodayOrders}" 
                                               Style="{StaticResource MetricValueStyle}"/>
                                    <TextBlock Text="Заказов сегодня" 
                                               Style="{StaticResource MetricLabelStyle}"/>
                                </StackPanel>
                            </Border>
                        </WrapPanel>

                        <WrapPanel Margin="0,10,0,0">
                            <Border Style="{StaticResource MetricCardStyle}" Width="280">
                                <StackPanel>
                                    <TextBlock Text="{Binding DashboardMetrics.ActiveUsers}" 
                                               Style="{StaticResource MetricValueStyle}"/>
                                    <TextBlock Text="Активных пользователей" 
                                               Style="{StaticResource MetricLabelStyle}"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource MetricCardStyle}" Width="280">
                                <StackPanel>
                                    <TextBlock Text="{Binding DashboardMetrics.VisitStatistics}" 
                                               Style="{StaticResource MetricValueStyle}"/>
                                    <TextBlock Text="Уникальных клиентов (30 дней)" 
                                               Style="{StaticResource MetricLabelStyle}"/>
                                </StackPanel>
                            </Border>

                            <Border Style="{StaticResource MetricCardStyle}" Width="280">
                                <StackPanel>
                                    <TextBlock Text="{Binding DashboardMetrics.MostPopularService}" 
                                               FontSize="24"
                                               FontWeight="Bold"
                                               Foreground="#111827"
                                               TextWrapping="Wrap"/>
                                    <TextBlock Text="Самая популярная услуга" 
                                               Style="{StaticResource MetricLabelStyle}"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="{Binding DashboardMetrics.MostPopularServiceCount, StringFormat='{}{0} заказов'}" 
                                                   FontSize="14"
                                                   Foreground="#6B7280"/>
                                        <TextBlock Text=" • " 
                                                   FontSize="14"
                                                   Foreground="#6B7280"/>
                                        <TextBlock Text="{Binding MostPopularServiceRevenueFormatted}" 
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="#059669"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </WrapPanel>

                        <WrapPanel Margin="0,20,0,0">
                            <Border Style="{StaticResource MetricCardStyle}" Width="420">
                                <StackPanel>
                                    <TextBlock Text="📅 Самый популярный месяц" 
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="#111827"
                                               Margin="0,0,0,10"/>
                                    <TextBlock Text="{Binding MostPopularMonthInfo}" 
                                               FontSize="16"
                                               Foreground="#6B7280"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Отчет о выручке -->
                <Border Background="White" 
                        CornerRadius="8"
                        Padding="20"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        Margin="0,0,0,20"
                        Visibility="{Binding IsRevenueVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Text="💰 Отчет о выручке" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       Foreground="#111827"/>
                            <Button Content="Загрузить" 
                                    Margin="20,0,0,0"
                                    Padding="10,5"
                                    Command="{Binding LoadRevenueReportCommand}"
                                    Background="#2C4A6B"
                                    Foreground="White"
                                    BorderThickness="0"
                                    FontWeight="SemiBold"
                                    Cursor="Hand"/>
                        </StackPanel>

                        <!-- Фильтры по дате -->
                        <Border Background="#F8FAFC" 
                                CornerRadius="6"
                                Padding="15"
                                Margin="0,0,0,20"
                                BorderBrush="#E2E8F0"
                                BorderThickness="1">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Период:" 
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0"/>
                                <DatePicker SelectedDate="{Binding RevenueStartDate}"
                                            Margin="0,0,10,0"
                                            Width="120"/>
                                <TextBlock Text="по" 
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0"/>
                                <DatePicker SelectedDate="{Binding RevenueEndDate}"
                                            Width="120"/>
                            </StackPanel>
                        </Border>

                        <!-- Метрики выручки -->
                        <WrapPanel Margin="0,0,0,30">
                            <Border Background="#F0F9FF" 
                                    BorderBrush="#BAE6FD"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="20"
                                    Margin="0,0,15,0">
                                <StackPanel>
                                    <TextBlock Text="Общая выручка" FontSize="12" Foreground="#6B7280"/>
                                    <TextBlock Text="{Binding RevenueReport.TotalRevenue, StringFormat='{}{0:N0} ₽'}" 
                                             FontSize="24" FontWeight="Bold" Foreground="#0284C7"/>
                                </StackPanel>
                            </Border>

                            <Border Background="#ECFDF5" 
                                    BorderBrush="#A7F3D0"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="20"
                                    Margin="0,0,15,0">
                                <StackPanel>
                                    <TextBlock Text="Средний чек" FontSize="12" Foreground="#6B7280"/>
                                    <TextBlock Text="{Binding RevenueReport.AverageOrderValue, StringFormat='{}{0:N0} ₽'}" 
                                             FontSize="24" FontWeight="Bold" Foreground="#059669"/>
                                </StackPanel>
                            </Border>

                            <Border Background="#FEF2F2" 
                                    BorderBrush="#FECACA"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="20"
                                    Margin="0,0,15,0">
                                <StackPanel>
                                    <TextBlock Text="Отмененные заказы" FontSize="12" Foreground="#6B7280"/>
                                    <TextBlock Text="{Binding RevenueReport.CancelledOrders}" 
                                             FontSize="24" FontWeight="Bold" Foreground="#DC2626"/>
                                </StackPanel>
                            </Border>

                            <Border Background="#F3F4F6" 
                                    BorderBrush="#D1D5DB"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="20">
                                <StackPanel>
                                    <TextBlock Text="Всего заказов" FontSize="12" Foreground="#6B7280"/>
                                    <TextBlock Text="{Binding RevenueReport.TotalOrders}" 
                                             FontSize="24" FontWeight="Bold" Foreground="#6B7280"/>
                                </StackPanel>
                            </Border>
                        </WrapPanel>

                        <!-- Топ услуг -->
                        <StackPanel>
                            <TextBlock Text="Топ услуг по выручке" 
                                     FontSize="16" FontWeight="SemiBold" Foreground="#111827"
                                     Margin="0,30,0,15"/>

                            <ItemsControl ItemsSource="{Binding RevenueReport.TopServices}" Margin="0,0,0,20">
                                <ItemsControl.Style>
                                    <Style TargetType="ItemsControl">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasTopServices}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ItemsControl.Style>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="0,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="150"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding ServiceName}" FontSize="14" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="1" Text="{Binding OrderCount, StringFormat='{}{0} зак.'}" FontSize="14" Foreground="#6B7280" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="2" Text="{Binding Revenue, StringFormat='{}{0:N0} ₽'}" FontSize="14" FontWeight="SemiBold" Foreground="#059669" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Border Background="#F9FAFB" CornerRadius="6" Padding="20" Margin="0,0,0,20"
                                    Visibility="{Binding HasNoTopServices, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="📭 Нет данных по услугам" FontSize="14" Foreground="#9CA3AF" HorizontalAlignment="Center"/>
                            </Border>
                        </StackPanel>

                        <!-- Топ клиентов -->
                        <StackPanel>
                            <TextBlock Text="Топ клиентов" 
                                     FontSize="16" FontWeight="SemiBold" Foreground="#111827"
                                     Margin="0,0,0,15"/>

                            <ItemsControl ItemsSource="{Binding RevenueReport.CustomerStatistics}">
                                <ItemsControl.Style>
                                    <Style TargetType="ItemsControl">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasCustomerStatistics}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ItemsControl.Style>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="0,10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="150"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="{Binding UserName}" FontSize="14" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="1" Text="{Binding OrderCount, StringFormat='{}{0} зак.'}" FontSize="14" Foreground="#6B7280" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="2" Text="{Binding TotalSpent, StringFormat='{}{0:N0} ₽'}" FontSize="14" FontWeight="SemiBold" Foreground="#059669" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <Border Background="#F9FAFB" CornerRadius="6" Padding="20" Margin="0,10,0,0"
                                    Visibility="{Binding HasNoCustomerStatistics, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="📭 Нет данных по клиентам" FontSize="14" Foreground="#9CA3AF" HorizontalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
